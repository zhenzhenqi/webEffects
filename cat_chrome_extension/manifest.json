{
    "manifest_version": 3,
    "name": "Weather p5.js Extension",
    "version": "1.0",
    "description": "Displays weather data using p5.js visuals",
    "action": {
        "default_popup": "popup.html",
        "default_icon": {
            "16": "icons/icon16.png",
            "48": "icons/icon48.png",
            "128": "icons/icon128.png"
        }
    },
    "permissions": [],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}